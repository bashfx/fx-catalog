#!/usr/bin/env bash

# Simple driver runner

if [ -z "$1" ]; then
  echo "Usage: driver <test_name>"
  exit 1
fi

TEST_NAME="$1"
DRIVER_FILE="$(dirname "$0")/../tests/${TEST_NAME}-driver.sh"

if [ ! -f "$DRIVER_FILE" ]; then
  echo "Error: Driver file not found: $DRIVER_FILE"
  exit 1
fi

shift # remove the test name from the arguments

# Execute the driver's main function, passing all remaining arguments
"$DRIVER_FILE" "$@"
